<UserControl x:Class="Tagzer.CheckinCommentToolWindowControl"  
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
          mc:Ignorable="d"  
          d:DesignHeight="400" d:DesignWidth="600"  
          Background="#1E1E1E">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Clear button -->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="117"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Margin" Value="0,5,0,2"/>
                </Style>
            </Grid.Resources>

            <!-- Clear All Button -->
            <Button Grid.Row="0" Grid.Column="1" x:Name="btnClearAll" Content="Clear All" Width="100" Margin="5,0,5,10" HorizontalAlignment="Right" Click="BtnClearAll_Click" Background="LightCoral">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Red"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkRed"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Button.Effect>
            </Button>
            <!-- IsMerge -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="IsMerge" VerticalAlignment="Top" Height="16" Margin="0,10,0,0"/>
            <Border Grid.Row="1" Grid.Column="1" Background="#2D2D30" CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1" Margin="5,5,5,5">
                <ComboBox x:Name="cmbIsMerge" Background="Transparent" Foreground="Black" BorderThickness="0" MinWidth="150"/>
            </Border>

            <!-- Product -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Product *" VerticalAlignment="Top" Height="16" Margin="0,10,0,0"/>
            <Border Grid.Row="2" Grid.Column="1" Background="#2D2D30" CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1" Margin="5,5,5,5">
                <ComboBox x:Name="cmbProduct" Background="Transparent" Foreground="Black" BorderThickness="0" MinWidth="150"/>
            </Border>

            <!-- Customer -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Customer *" VerticalAlignment="Top" Height="16" Margin="0,10,0,0"/>
            <Border Grid.Row="3" Grid.Column="1" Background="#2D2D30" CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1" Margin="5,5,5,5">
                <ComboBox x:Name="cmbCustomer" Background="Transparent" Foreground="Black" BorderThickness="0" MinWidth="150" IsEditable="True"/>
            </Border>

            <!-- Type -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Type *" VerticalAlignment="Top" Height="16" Margin="0,10,0,0"/>
            <Border Grid.Row="4" Grid.Column="1" Background="#2D2D30" CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1" Margin="5,5,5,5">
                <ComboBox x:Name="cmbType" Background="Transparent" Foreground="Black" BorderThickness="0" MinWidth="150"/>
            </Border>

            <!-- Topic -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Topic *" VerticalAlignment="Top" Height="16" Margin="0,13,0,0"/>
            <Border Grid.Row="5" Grid.Column="1" Background="White" CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1" Margin="5,5,5,5">
                <TextBox x:Name="txtTopic" Background="Transparent" Foreground="Black" BorderThickness="0" Padding="6" MinWidth="200"/>
            </Border>

            <!-- Description -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Description *" VerticalAlignment="Top" Height="16" Margin="0,5,0,0"/>
            <Border Grid.Row="6" Grid.Column="1" Background="White" CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1" Margin="5,5,5,5" MinHeight="100">
                <TextBox x:Name="txtDescription" Background="Transparent" Foreground="Black" BorderThickness="0" Padding="6" TextWrapping="Wrap" AcceptsReturn="True"/>
            </Border>

            <!-- IsRollback -->
            <TextBlock Grid.Row="7" Grid.Column="0" Text="IsRollback" VerticalAlignment="Top" Height="16" Margin="0,10,0,0"/>
            <Border Grid.Row="7" Grid.Column="1" Margin="0,5,5,5" Padding="6">
                <CheckBox x:Name="chkIsRollback" Foreground="White" VerticalAlignment="Center" Width="16" HorizontalAlignment="Left"/>
            </Border>

            <!-- Copy Button -->
            <Button Grid.Row="8" Grid.Column="1" x:Name="btnCopy" Content="Validate and Copy" Width="166" Margin="5,5,0,5" Background="#2F539B" Foreground="White" Padding="6,3" Cursor="Hand" BorderThickness="0" HorizontalAlignment="Left">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#003F6B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Button.Effect>
            </Button>

            <!-- Output -->
            <Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Background="White" CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1" Margin="5,5,5,5">
                <TextBox x:Name="txtOutput" Background="Transparent" Foreground="Black" BorderThickness="0" TextWrapping="Wrap" IsReadOnly="True" Padding="6" FontSize="14" Height="80"/>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>  
